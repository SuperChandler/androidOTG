<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/bt_regist_listener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/regist_listener"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/bt_save_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/saveFile"
        app:layout_constraintTop_toBottomOf="@id/bt_regist_listener" />

    <Button
        android:id="@+id/bt_save_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/saveImg"
        app:layout_constraintTop_toBottomOf="@id/bt_save_file" />

    <Button
        android:id="@+id/bt_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/read"
        app:layout_constraintTop_toBottomOf="@id/bt_save_img" />

    <Button
        android:id="@+id/bt_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/delete"
        app:layout_constraintTop_toBottomOf="@id/bt_read" />

    <Button
        android:id="@+id/bt_modify_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/modify_name"
        app:layout_constraintTop_toBottomOf="@id/bt_delete" />

    <TextView
        android:id="@+id/tv_log"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_modify_name" />

</androidx.constraintlayout.widget.ConstraintLayout>